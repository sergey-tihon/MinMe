@page "/counter"
@using MinMe.Blazor.Data
@implements IViewFor<CounterViewModel>


<h1>Counter</h1>

<p>Current count: @ViewModel.CurrentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-secondary" @onclick="ShowErrorDialog">Error dialog</button>


@code {

    [Inject]
    public CounterViewModel ViewModel { get; set; }

    object IViewFor.ViewModel
    {
        get => ViewModel;
        set => ViewModel = (CounterViewModel)value;
    }

    private Task IncrementCount() => ViewModel.Increment.Execute().ToTask();
    private Task ShowErrorDialog() => ViewModel.ShowError.Execute().ToTask();
}
